.landing-slide
  background-image: none
  background-position 15% 10%
  background-repeat no-repeat
  background-size 40%
  display: block;

  #logo
    position absolute
    left 40px
    top 20px
    width: 40%

  h1
    font-size 18px
    font-weight bold
    margin 200px 0 40px 40px

  ul
    li
      list-style: none
      margin-left: 10px;
      line-height: .75

  ul.speakers
    li.speaker-card
      font-size: 16px

  ul.information
    margin-top 40px
    li.information-item
      font-size: 12px

.basic-slide
  display block

  h1
    font-size 36px
    font-weight bold
    margin 40px

  h2
    font-size 18px
    font-weight bold
    margin 0 0 10px 40px

  p
    font-size 16px
    margin: 0 0 30px 40px

.basic-caption-slide
  display block

  h1
    font-size 36px
    font-weight bold
    margin 40px 0 10px 40px

  h2
    font-size 18px
    font-weight bold
    margin 0 0 10px 40px

  p
    font-size 16px
    margin: 0 0 30px 40px

.bullet-slide
  display: block;

  h1
    font-size 36px
    font-weight bold
    margin 40px

  ul
    li
      list-style square
      margin-left 40px
      line-height 1
      font-size 18px

.bullet-caption-slide
  display: block;

  h1
    font-size 36px
    font-weight bold
    margin 40px 0 10px 40px

  h2
    font-size 24px
    font-weight bold
    margin 40px 0 10px 40px

  p
    font-size 16px
    margin 0 0 30px 40px

  ul
    li
      list-style square
      margin-left 30px
      line-height 1
      font-size 18px

.sponsor-slide
  display: block;

  h1
    font-size 36px
    font-weight bold
    margin 40px 0 10px 40px

  h2
    font-size 18px
    font-weight bold
    margin 0 0 0 40px

  p
    font-size 16px
    margin 0 0 30px 40px

  ul
    li
      display inline
      font-size 18px
      line-height .75
      margin 0 0 0 40px

.image
  display: block;

  h1
    font-size 36px
    font-weight bold
    margin 40px 0 10px 40px

  p
    font-size 16px
    margin 0 0 30px 40px

  img
    padding-top 0%
    width 60%
